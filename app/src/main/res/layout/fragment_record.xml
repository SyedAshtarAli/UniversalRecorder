<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecordFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ressBtn"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/resume"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timeElapsed" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Stop"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/stopBtn"
            app:layout_constraintStart_toStartOf="@+id/stopBtn"
            app:layout_constraintTop_toBottomOf="@+id/stopBtn" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Pause"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/pauBtn"
            app:layout_constraintStart_toStartOf="@+id/pauBtn"
            app:layout_constraintTop_toBottomOf="@+id/pauBtn" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Resume"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/ressBtn"
            app:layout_constraintStart_toStartOf="@+id/ressBtn"
            app:layout_constraintTop_toBottomOf="@+id/ressBtn" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/recBtn"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginTop="84dp"
            android:background="#FFFFFF"
            android:scaleType="fitXY"
            android:src="@drawable/recordaa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/stopBtn"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:scaleType="fitXY"
            android:src="@drawable/stop"
            app:layout_constraintBottom_toBottomOf="@+id/pauBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/pauBtn" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/pauBtn"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:scaleType="fitXY"
            android:src="@drawable/pause"
            app:layout_constraintBottom_toBottomOf="@+id/ressBtn"
            app:layout_constraintEnd_toStartOf="@+id/stopBtn"
            app:layout_constraintStart_toEndOf="@+id/ressBtn"
            app:layout_constraintTop_toTopOf="@+id/ressBtn" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:text="Audio Recorder"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Record"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/recBtn"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toStartOf="@+id/recBtn"
            app:layout_constraintTop_toBottomOf="@+id/recBtn" />



        <Chronometer
            android:id="@+id/timeElapsed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>